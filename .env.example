# Environment Configuration
# Copy this file to .env and update with your values

# API Configuration
API_BASE_URL=https://your-api-endpoint.ngrok-free.dev
API_TOKEN=your_api_token_here
ORG_ID=your_organization_id
CREATED_BY=your_user_id

# Test Configuration
BASE_URL=https://www.saucedemo.com
TEST_ENV=qa
BROWSER=chrome

# Jenkins Configuration (automatically set by Jenkins)
# JENKINS_URL=
# BUILD_NUMBER=
# BUILD_URL=
# JOB_NAME=
# GIT_BRANCH=
# GIT_COMMIT=
# BUILD_USER=

# Execution Configuration
HEADLESS=false
PARALLEL_EXECUTION=false
MAX_INSTANCES=1

# Timeouts (in milliseconds)
DEFAULT_TIMEOUT=30000
PAGE_LOAD_TIMEOUT=60000
IMPLICIT_TIMEOUT=10000

# Screenshots
SCREENSHOT_ON_FAILURE=true
SCREENSHOT_PATH=./screenshots

# Reporting
ALLURE_RESULTS_DIR=./allure-results
JUNIT_RESULTS_DIR=./test-results/junit
JSON_RESULTS_DIR=./test-results/json
