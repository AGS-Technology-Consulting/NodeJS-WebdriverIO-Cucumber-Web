{
  "name": "wdio-cucumber-professional-framework",
  "version": "1.0.0",
  "description": "Professional WebdriverIO-Cucumber Test Automation Framework",
  "main": "index.js",
  "scripts": {
    "test": "wdio run wdio.conf.js",
    "test:chrome": "wdio run wdio.conf.js --spec=./features/**/*.feature",
    "test:firefox": "wdio run wdio.conf.js --spec=./features/**/*.feature",
    "test:parallel": "wdio run wdio.conf.js",
    "report": "allure generate allure-results --clean && allure open",
    "clean": "rm -rf allure-results allure-report .wdio-results",
    "lint": "eslint . --ext .js"
  },
  "keywords": [
    "webdriverio",
    "cucumber",
    "bdd",
    "testing",
    "automation",
    "jenkins"
  ],
  "author": "Pravin - Senior QA Automation Engineer",
  "license": "MIT",
  "dependencies": {
    "@wdio/cli": "8.39.1",
    "@wdio/cucumber-framework": "8.39.0",
    "@wdio/local-runner": "8.39.1",
    "@wdio/spec-reporter": "8.39.0",
    "@wdio/allure-reporter": "8.38.0",
    "@wdio/junit-reporter": "8.38.0",
    "@wdio/json-reporter": "8.38.0",
    "@cucumber/cucumber": "10.9.0",
    "axios": "1.6.0",
    "allure-commandline": "2.25.0",
    "chromedriver": "120.0.1",
    "geckodriver": "4.3.1",
    "chai": "4.3.10",
    "dotenv": "16.3.1",
    "winston": "3.11.0",
    "fs-extra": "11.2.0"
  },
  "devDependencies": {
    "eslint": "8.55.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-plugin-import": "2.29.1"
  },
  "overrides": {
    "@wdio/cucumber-framework": {
      "@cucumber/cucumber": "10.9.0"
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}